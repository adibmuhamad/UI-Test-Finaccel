<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBg"
    tools:context=".views.LoanConfirmationActivity"
    android:id="@+id/coordinatorLyt">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/custom_tab_layout_height"
                    android:minHeight="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_back"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="false"
                        android:text="@string/txt_loan_confirmation"/>

                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_indosat_logo"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/txtPhoneNumber"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="@string/text_mobile_number"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txtOTPAlert"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_yellow"
                android:visibility="gone"
                android:padding="20dp"
                android:text="@string/txt_otp_alert"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingStart="20dp"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="@drawable/bg_gray">

                <TextView
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_payment_details"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorWhite">

                    <LinearLayout
                        android:paddingTop="20dp"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_paket_data_indosat"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"/>

                        <TextView
                            android:id="@+id/txtPrice"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            android:gravity="right"
                            android:textColor="@color/colorBlack"/>

                    </LinearLayout>

                    <LinearLayout
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_paket_m"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"/>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"/>

                    </LinearLayout>

                    <LinearLayout
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_admin_fee"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"/>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            android:gravity="right"
                            android:text="@string/txt_default_price"
                            android:textColor="@color/colorBlack"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@drawable/custom_dotted_line"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_pay_in_30_days"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"/>

                        <TextView
                            android:id="@+id/txtTotalPrice"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:text="@string/txt_default_price"
                            android:textColor="@color/colorAccent"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="@drawable/bg_gray">

                <TextView
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_kredivo_pin"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorWhite">

                    <LinearLayout
                        android:paddingTop="20dp"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_pin"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"/>

                    </LinearLayout>

                    <LinearLayout
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:passwordToggleContentDescription="description"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="@color/colorGray">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/inputPIN"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorBlack"
                                android:inputType="numberPassword"
                                app:passwordToggleEnabled="true"
                                android:maxLength="6"/>

                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_agreement"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_pay"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorAccent"
                android:padding="20dp"
                />

        </LinearLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
